<Window x:Class="CS665_PizzaRestaurantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS665_PizzaRestaurantApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <!-- Horizontal StackPanel for images -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Image Source="/Images/papa_costanaza_happy.png" Height="100" Width="100" Stretch="Uniform"/>
                <Image Source="/Images/pizza_logo.png" Height="100" Width="100" Stretch="Uniform" Margin="0,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Papa Costanza's" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,0"/>
            <TextBlock Text="Restaurant Manager" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Create Order" Click="CreateOrder_Click" Height="40" Margin="0,5"/>
            <Button Content="View Orders" Click="ViewOrders_Click" Height="40" Margin="0,5"/>
            <Button Content="Manage Customers" Click="ManageCustomers_Click" Height="40" Margin="0,5"/>
            <Button Content="Manage Menu Items" Click="ManageMenuItems_Click" Height="40" Margin="0,5"/>
            <Button Content="Exit" Click="Exit_Click" Height="40" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>