<Window x:Class="CS665_PizzaRestaurantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS665_PizzaRestaurantApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <Image Source="Images/pizza_logo.png" Height="100" Width="100" Margin="0,0,0,20" Stretch="Uniform"/>

            <TextBlock Text="Pizza Restaurant Manager" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Create Order" Click="CreateOrder_Click" Height="40" Margin="0,5"/>
            <Button Content="View Orders" Click="ViewOrders_Click" Height="40" Margin="0,5"/>
            <Button Content="Manage Customers" Click="ManageCustomers_Click" Height="40" Margin="0,5"/>
            <Button Content="Manage Menu Items" Click="ManageMenuItems_Click" Height="40" Margin="0,5"/>
            <Button Content="Exit" Click="Exit_Click" Height="40" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
